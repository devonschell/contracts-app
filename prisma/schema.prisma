model UserSubscription {
  id               String   @id @default(cuid())
  clerkUserId      String   @unique
  stripeCustomerId String?
  priceId          String?
  status           String    @default("inactive") // active, past_due, canceled
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

//
// ðŸ”¥ NEW â€” onboarding + email limits + progress
//
model UserSettings {
  id                String   @id @default(cuid())
  clerkUserId       String   @unique
  onboardingStep    Int      @default(0)         // 0 = not started, 1 = emails, 2 = upload, 3 = complete
  allowedEmails     Int      @default(1)         // Starter=1, Growth=5, Pro=15
  selectedEmails    Json?                        // array of strings (emails)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
